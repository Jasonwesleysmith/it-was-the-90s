<div class="login-container">
  <h2>Already a member?</h2>
  <h3 class="form-title">Login:</h3>
  <form class="login-form">
    <div>
      <label for="email-login">Email:</label>
      <input type="text" name="email-login" id="email-login" />
    </div>
    <div>
      <label for="password-login">Password:</label>
      <input type="password" name="password-login" id="password-login" />
    </div>
    <div>
      <button type="submit">Login</button>
    </div>
  </form>
</div>

<div class="signup-container">
  <h2>Not a member?</h2>
  <h3 class="form-title">Sign Up:</h3>
  <form class="signup-form">
    <div>
      <label for="critic-signup">Critic:</label>
      <input type="text" name="critic-signup" id="critic-signup" />
    </div>
    <div>
      <label for="email-signup">Email:</label>
      <input type="text" name="email-signup" id="email-signup" />
    </div>
    <div>
      <label for="password-signup">Password</label>
      <input type="password" name="password-signup" id="password-signup" />
    </div>
    <div>
      <button type="submit">Sign up</button>
    </div>
  </form>
</div>

<script src="/javascript/login.js"></script>